<UserControl x:Class="TextScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=U2UConsult.RichHtmlTextBlock"
             mc:Ignorable="d" 
            d:DesignHeight="300" d:DesignWidth="300" Width="800" Height="485">
    <Grid>
        <Controls:RichTextBox 
			x:Name="HtmlTextBlock"
			Background="Transparent" Margin="60,50"
			Cursor="Arrow" BorderBrush="Transparent" BorderThickness="0" VerticalContentAlignment="Center" VerticalScrollBarVisibility="Auto">
            <FlowDocument/>
        </Controls:RichTextBox>
    </Grid>
</UserControl>
